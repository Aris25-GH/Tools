    <script>
        function validatePhotoSize(input) {
            if (input.files.length > 0) {
                let fileSize = input.files[0].size / 1024 / 1024; // Convert to MB
                if (fileSize > 5) {
                    alert("Photo size must not exceed 5MB.");
                    input.value = "";
                }
            }
        }
        
        function generateQRCode() {
            let salutation = document.getElementById('salutation').value;
            let name = document.getElementById('name').value;
            let title = document.getElementById('title').value;
            let company = document.getElementById('company').value;
            let phone = document.getElementById('phone').value;
            let phone2 = document.getElementById('phone2').value;
            let mobile = document.getElementById('mobile').value;
            let mobile2 = document.getElementById('mobile2').value;
            let email = document.getElementById('email').value;
            let website = document.getElementById('website').value;
            let address = document.getElementById('address').value;
            let location = document.getElementById('location').value;
            let note = document.getElementById('note').value;
            
            let vCardData = `BEGIN:VCARD\nVERSION:3.0\nN:${salutation} ${name}\nORG:${company}\nTITLE:${title}\nTEL;TYPE=work,voice:${phone}\nTEL;TYPE=home,voice:${phone2}\nTEL;TYPE=cell:${mobile}\nTEL;TYPE=cell:${mobile2}\nEMAIL:${email}\nURL:${website}\nADR:${address}\nNOTE:${location} ${note}\nEND:VCARD`;
            
            document.getElementById("qrcode").innerHTML = "";
            let qr = new QRCode(document.getElementById("qrcode"), {
                text: vCardData,
                width: 256,
                height: 256,
                correctLevel: QRCode.CorrectLevel.H
            });
            
            setTimeout(() => {
                let qrCanvas = document.querySelector('#qrcode canvas');
                let qrImage = qrCanvas.toDataURL("image/png");
                let downloadBtn = document.getElementById('download');
                downloadBtn.href = qrImage;
                downloadBtn.style.display = 'block';
            }, 500);
        }
    </script>
