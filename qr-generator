        <input type="text" id="phone2" placeholder="Phone Number (Secondary) (Optional)">
        <input type="text" id="mobile" placeholder="Mobile Number (Primary)">
        <input type="text" id="mobile2" placeholder="Mobile Number (Secondary) (Optional)">
