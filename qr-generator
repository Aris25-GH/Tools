        <input type="text" id="location" placeholder="Location (Optional, e.g., Google Maps URL)">
        <input type="text" id="note" placeholder="Note (Optional, max 100 characters)" maxlength="100">
        <button onclick="generateQRCode()">Generate QR Code</button>
        <div id="qrcode"></div>
